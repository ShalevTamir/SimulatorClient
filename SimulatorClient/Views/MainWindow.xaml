<Window x:Class="SimulatorClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulatorClient.ViewModel"
        x:Name="mainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="Auto"></Setter>
            <Setter Property="Height" Value="50"></Setter>
        </Style>
        <local:TeleParameterConverter x:Key="teleParameterConverter" ></local:TeleParameterConverter>
        <local:WindowViewModel x:Key="dataContext"></local:WindowViewModel>
    </Window.Resources>


    <Grid>
        <ItemsControl ItemsSource="{Binding teleParameters}" x:Name="itemsControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding Path=ToggleValueCommandAsync, Source={StaticResource dataContext}}" CommandParameter="{Binding}">
                        <Button.Content>
                            <MultiBinding Converter="{StaticResource teleParameterConverter}">
                                <Binding Path="Name"></Binding>
                                <Binding Path="Value"></Binding>
                                <Binding Path="Comparison"></Binding>
                                <Binding Path="ConditionActive"></Binding>
                            </MultiBinding>
                        </Button.Content>    
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
